<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana6.VIstas.vHome"
             Title="vHome">
    <VerticalStackLayout 
        Spacing="20"
        Margin="30">
        <Label 
            Text="Listado Estudiante web - GET"
            FontSize="20"
            HorizontalTextAlignment="Center"/>
        <Frame Margin="20" Padding="5" HasShadow="True" BorderColor="Black" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <BoxView Color="AliceBlue" Grid.ColumnSpan="4" />
                
                <Label x:Name="Codigo" Grid.Row="0"   Grid.Column="0"  TextColor="Red" Text="Codigo" FontAttributes="Bold"/>
                <Label x:Name="Nombre" Grid.Row="0"   Grid.Column="1"  TextColor="Red" Text="Nombre" FontAttributes="Bold"/>
                <Label x:Name="Apellido" Grid.Row="0" Grid.Column="2"  TextColor="Red" Text="Apellido" FontAttributes="Bold"/>
                <Label x:Name="Edad" Grid.Row="0"     Grid.Column="3"  TextColor="Red" Text="Edad" FontAttributes="Bold"/>

                <CollectionView x:Name="listaEstudiantes" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label x:Name="lblcodigo" Text="{Binding codigo}" Grid.Column="0" FontAttributes="Bold"/>
                                <Label x:Name="lblNombre" Text="{Binding nombre}" Grid.Column="1" />
                                <Label x:Name="lblApellido" Text="{Binding apellido}" Grid.Column="2"/>
                                <Label x:Name="lbledad" Text="{Binding edad}" Grid.Column="3"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Frame>
        <Frame Margin="20" Padding="5" HasShadow="True" BorderColor="Black" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <BoxView Color="AliceBlue" Grid.ColumnSpan="4" />


                <Label x:Name="Nombre" Grid.Row="0"   Grid.Column="0"  TextColor="Blue" Text="Nombre" FontAttributes="Bold"/>
                <Label x:Name="Apellido" Grid.Row="0" Grid.Column="1"  TextColor="Blue" Text="Apellido" FontAttributes="Bold"/>
                <Label x:Name="Edad" Grid.Row="0"     Grid.Column="2"  TextColor="Blue" Text="Edad" FontAttributes="Bold"/>


                <Entry x:Name="txtNombre" Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="txtApellido" Grid.Row="1" Grid.Column="1"/>
                <Entry x:Name="txtEdad" Grid.Row="1" Grid.Column="2"/>
                <Button Text="Ingresar" Grid.Row="2" Grid.ColumnSpan="3"/>

            </Grid>
        </Frame>

    </VerticalStackLayout>
</ContentPage>